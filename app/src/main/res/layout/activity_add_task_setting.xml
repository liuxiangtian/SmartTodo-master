<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/text_time_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_toolbar_background"
        app:title="设置时间"
        android:elevation="5dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/color_toolbar_title" />

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/linear_execute_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/text_execute_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="设置时间"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/image_execute_time"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_black_24dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_execute_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_notifications_black_24dp" />

        <TextView
            android:id="@+id/text_execute_notify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:text="设置提前"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/image_execute_notify"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_black_24dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_execute_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_task_repeat_24dp" />

        <TextView
            android:id="@+id/text_execute_repeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:text="设置重复"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/image_execute_repeat"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_black_24dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_execute_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_review_black_24dp" />

        <TextView
            android:id="@+id/text_execute_review"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:text="设置复习"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/image_execute_review"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_black_24dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>